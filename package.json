{
  "name": "test-snippets",
  "version": "2.0.0",
  "description": "Flexibly test markdown code examples",
  "type": "module",
  "main": "./build/code/index.js",
  "exports": {
    "import": "./build/code/index.js",
    "require": "./build/wrapper.cjs"
  },
  "bin": {
    "test-snippets": "./build/code/command.js"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:peterjwest/test-snippets.git"
  },
  "files": [
    "/build"
  ],
  "author": "Peter West",
  "bugs": {
    "url": "https://github.com/peterjwest/test-snippets/issues"
  },
  "keywords": [
    "markdown",
    "test",
    "unit",
    "example",
    "documentation",
    "docs"
  ],
  "license": "MIT",
  "homepage": "https://github.com/peterjwest/test-snippets#readme",
  "scripts": {
    "build": "rm -rf build/code && tsup src/index.ts src/command.ts --format cjs,esm --dts --out-dir build/code",
    "lint:ts": "eslint",
    "lint:dependencies": "depcheck",
    "lint:unlinted": "unlinted",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:snippets": "tsx src/command.ts",
    "preinstall": "npx only-allow pnpm",
    "prepublish": "pnpm install && pnpm build"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "chalk": "^5.3.0",
    "glob": "^11.0.0",
    "lodash": "^4.17.21",
    "marked": "^14.0.0",
    "mkdirp": "^3.0.1",
    "multiline-ts": "^4.0.1",
    "spawn-process": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bluebird": "^3.5.42",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.1.0",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vitest/coverage-v8": "^2.0.5",
    "depcheck": "^1.4.7",
    "eslint": "^9.8.0",
    "jsonlint": "^1.6.3",
    "only-allow": "^1.2.1",
    "sinon": "^18.0.0",
    "sinon-assert-stub": "^2.1.0",
    "sinon-mocha-test": "^2.1.1",
    "tsup": "^8.2.4",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "unlinted": "^2.0.0",
    "vitest": "^2.0.5"
  }
}
