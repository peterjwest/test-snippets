{
  "name": "test-snippets",
  "version": "1.0.0",
  "description": "Flexibly test markdown code examples",
  "type": "module",
  "main": "./build/wrapper.cjs",
  "exports": {
    "import": "./build/es6/index.js",
    "require": "./build/wrapper.cjs"
  },
  "bin": {
    "test-snippets": "./build/code/command.js"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:peterjwest/test-snippets.git"
  },
  "files": [
    "/build"
  ],
  "author": "Peter West",
  "bugs": {
    "url": "https://github.com/peterjwest/test-snippets/issues"
  },
  "keywords": [
    "markdown",
    "test",
    "unit",
    "example",
    "documentation",
    "docs"
  ],
  "license": "MIT",
  "homepage": "https://github.com/peterjwest/test-snippets#readme",
  "scripts": {
    "build": "rm -rf build/code && tsup src/index.ts src/command.ts --format cjs,esm --dts --out-dir build/code",
    "lint": "eslint .",
    "lint:dependencies": "depcheck",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:snippets": "tsx src/command.ts",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "chalk": "^4.1.2",
    "glob": "^9.3.5",
    "lodash": "^4.17.21",
    "marked": "^4.3.0",
    "mkdirp": "^2.1.6",
    "multiline-ts": "^2.2.0",
    "spawn-process": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.24.9",
    "@babel/eslint-parser": "^7.24.8",
    "@babel/types": "^7.24.9",
    "@types/babel__core": "^7.20.5",
    "@types/bluebird": "^3.5.42",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.17.7",
    "@types/marked": "^4.3.2",
    "@types/node": "^18.19.42",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^2.0.4",
    "convert-extension": "^0.3.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "jsonlint": "^1.6.3",
    "only-allow": "^1.2.1",
    "sinon-assert-stub": "^1.2.0",
    "sinon-mocha-test": "^1.2.0",
    "tsup": "^6.7.0",
    "tsx": "^3.14.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4"
  }
}
