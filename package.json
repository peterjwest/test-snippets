{
  "name": "test-snippets",
  "version": "0.3.0",
  "description": "Flexibly test markdown code examples",
  "type": "module",
  "main": "./build/wrapper.cjs",
  "exports": {
    "import": "./build/es6/index.js",
    "require": "./build/wrapper.cjs"
  },
  "bin": {
    "test-snippets": "./build/code/command.js"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:peterjwest/test-snippets.git"
  },
  "files": [
    "/build"
  ],
  "author": "Peter West",
  "bugs": {
    "url": "https://github.com/peterjwest/test-snippets/issues"
  },
  "keywords": [
    "markdown",
    "test",
    "unit",
    "example",
    "documentation",
    "docs"
  ],
  "license": "MIT",
  "homepage": "https://github.com/peterjwest/test-snippets#readme",
  "scripts": {
    "build": "rm -rf build/code && tsup src/index.ts src/command.ts --format cjs,esm --dts --out-dir build/code",
    "lint:ts": "tslint --format verbose --project tsconfig.json",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:snippets": "ts-node src/command.ts",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "chalk": "^4.1.0",
    "glob": "^7.1.6",
    "lodash": "^4.17.15",
    "marked": "^2.0.6",
    "mkdirp": "^1.0.4",
    "multiline-ts": "^2.0.0",
    "spawn-process": "^1.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/types": "^7.10.4",
    "@types/babel__core": "^7.1.9",
    "@types/bluebird": "^3.5.32",
    "@types/glob": "^7.1.2",
    "@types/lodash": "^4.14.191",
    "@types/marked": "^2.0.3",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^15.6.1",
    "@vitest/coverage-c8": "^0.29.3",
    "convert-extension": "^0.2.0",
    "only-allow": "^1.1.1",
    "sinon-assert-stub": "^1.0.1",
    "sinon-mocha-test": "^1.0.8",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.2",
    "tslint-eslint-rules": "^5.4.0",
    "tsup": "^6.6.3",
    "typescript": "^4.3.2",
    "typescript-tslint-plugin": "^1.0.1",
    "vitest": "^0.29.3"
  }
}
